{
  "name": "terminal-transcript-saver",
  "displayName": "Terminal Transcript Saver",
  "description": "Save terminal transcripts with Cmd+Shift+S",
  "version": "1.1.1",
  "publisher": "KyleJensen",
  "author": "Kyle Jensen",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "terminal",
    "transcript",
    "clipboard",
    "save",
    "export"
  ],
  "activationEvents": [
    "onCommand:terminalTranscriptSaver.save"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "terminalTranscriptSaver.save",
        "title": "Save Terminal Transcript"
      }
    ],
    "keybindings": [
      {
        "command": "terminalTranscriptSaver.save",
        "key": "cmd+shift+s",
        "when": "terminalFocus"
      }
    ],
    "configuration": {
      "title": "Terminal Transcript Saver",
      "properties": {
        "terminalTranscriptSaver.saveLocation": {
          "type": "string",
          "default": "",
          "description": "Custom directory to save transcripts. Leave empty to use workspace root (or Desktop if no workspace open)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "typescript": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kylermjensen/vscode-terminal-saver"
  },
  "bugs": {
    "url": "https://github.com/kylermjensen/vscode-terminal-saver/issues"
  },
  "homepage": "https://github.com/kylermjensen/vscode-terminal-saver#readme",
  "license": "MIT"
}
